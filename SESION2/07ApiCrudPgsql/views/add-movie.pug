extends layout.pug

block content
	section.container
		div.item.logo
		div.item
			h1
				a(href="/")=title
			div.item
				form.form(method="POST", action="/registrar")
					fieldset
						div.container.p1
							label.item.i-b.v-top.ph3.p_25.right(for="movie_id") IMDB id:
							input.item.i-b.v-top.ph9.p_25#movie_id(type="text", name="movie_id", required)
						div.container.p1
							label.item.i-b.v-top.ph3.p_25.right(for="title") Título:
							input.item.i-b.v-top.ph9.p_25#title(type="text", name="title", required)
						div.container.p1
							label.item.i-b.v-top.ph3.p_25.right(for="release") Año:
							input.item.i-b.v-top.ph9.p_25#release(type="text", name="release", required)
						div.container.p1
							label.item.i-b.v-top.ph3.p_25.right(for="rating") Calificación:
							input.item.i-b.v-top.ph9.p_25#rating(type="text", name="rating", required)
						div.container.p1
							label.item.i-b.v-top.ph3.p_25.right(for="image") Poster:
							input.item.i-b.v-top.ph9.p_25#image(type="text", name="image", required)
						div.container.p1
							input.item.ph4.mauto.button.add(type="submit",value="Agregar")
